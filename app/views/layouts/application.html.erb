<%= csrf_meta_tags %>
<meta name="turbolinks-cache-control" content="no-cache">
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Dota', root_path, class: 'navbar-brand' %>
    </div>
    <div  id="navbar">
      <ul class="nav navbar-nav">
          <li> <%= link_to 'Hero Stats', heros_path %> </li>
          <li> <%= link_to 'Your Stats', your_stats_path %> </li>
          <li> <%= link_to 'Meta', meta_path %> </li>
      </ul>
       <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_user.avatar_url, alt: current_user.nickname %></li>
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Log In via Steam', '/auth/steam' %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>
<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <center-wrap><div class="page-header"><h1><%= yield :page_header %></h1></div></center-wrap>
  <%= yield %>
</div>